<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@drawable/bg_rect_round_corner_25dp"
    android:orientation="horizontal">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="@dimen/_73sdp"
        android:layout_height="@dimen/_73sdp"
        android:layout_margin="@dimen/_10sdp"
        android:scaleType="center"
        app:riv_corner_radius="@dimen/_10sdp"
        android:id="@+id/img1"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_83sdp"
        android:orientation="vertical"
        >
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/an_medium"
        android:id="@+id/tv1"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/color_black"
        />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv2"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/an_demi_bold"
            android:textColor="@color/color_black"
            />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_13sdp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:src="@drawable/ic_menu_card"
        />

</RelativeLayout>